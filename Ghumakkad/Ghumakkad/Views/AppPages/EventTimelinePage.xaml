                            <Label Grid.Column="0" Text="21 JULY, 2019" FontSize="20" Margin="10" VerticalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Grid.Column="2" Text="&#xf0dd;" FontFamily="fwFreeS"  FontSize="20" Margin="10" HorizontalOptions="End" VerticalTextAlignment="Start">
                                <Label.Triggers>
                                    <DataTrigger 
                                        TargetType="Label"
                                        Binding="{Binding Source={RelativeSource AncestorType={x:Type behaviors:Expander}}, Path=IsExpanded}"
                                        Value="True">
                                        <Setter Property="Text" Value="&#xf0de;"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsClicked}" TargetType="Label" Value="True">
                                        <Setter Property="Text" Value="&#xf0de;"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>

                    </behaviors:Expander.Header>

                    <StackLayout Spacing="0"  BindableLayout.ItemsSource="{Binding EventsList}" BackgroundColor="White">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>

                                <Grid ColumnDefinitions="auto,auto" RowDefinitions="auto,auto,auto,*" ColumnSpacing="5" Margin="0,10,0,0" RowSpacing="0" BackgroundColor="White"  >
