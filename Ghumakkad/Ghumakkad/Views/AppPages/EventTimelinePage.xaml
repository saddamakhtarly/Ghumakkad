                                        <Label Text="{Binding FramOne}" TextColor="{StaticResource AppYellowColor}" FontSize="34" HorizontalOptions="Center" VerticalOptions="Center">
                                            <Label.Triggers>

                                                <DataTrigger Binding="{Binding FramClicked}" TargetType="Label" Value="True">
                                                    <Setter Property="TextColor" Value="{StaticResource WhiteColor}"/>
                                                </DataTrigger>

                                            </Label.Triggers>
                                            <!--<Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding FramClickCommand}"/>
                                                <TapGestureRecognizer Command="{Binding BindingContext.FramClickCommand, Source={x:Reference EventTimelinePageName}}" CommandParameter="{Binding .}"/>
                                            </Label.GestureRecognizers>-->

                                        </Label>
                                        <Frame.Triggers>
                                            <DataTrigger Binding="{Binding FramClicked}" TargetType="Frame" Value="True">
                                                <Setter Property="BackgroundColor" Value="{StaticResource AppYellowColor}"/>
                                            </DataTrigger>
                                        </Frame.Triggers>
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding BindingContext.FramClickCommand, Source={x:Reference EventTimelinePageName}}" CommandParameter="{Binding .}"/>
                                            </Frame.GestureRecognizers>
                                    </Frame>
                                    <Frame HasShadow="False" Grid.Row="2" Grid.RowSpan="2"   Grid.Column="0" CornerRadius="50" IsClippedToBounds="True" HeightRequest="40" WidthRequest="40" Margin="20,0" Padding="0" >
                                        <Image Source="dot" Aspect="AspectFit" />
                                    </Frame>
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Title}" Margin="0" Padding="0" FontSize="20" />
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Description}" Margin="0" Padding="0" FontSize="16" />
                                    <Label Grid.Row="2" Grid.Column="1" Margin="0" Padding="0" FontSize="16"  >
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding TimeShow1}" FontFamily="fwFreeS" />
                                                <Span Text="{Binding TimeShow2}"  />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Button 
                            Grid.Row="3" 
                            Grid.Column="1" 
                            Text="{Binding LiveButton}" 
                            BackgroundColor="Transparent" 
                            FontSize="10" 
                                        IsVisible="{Binding FramClicked}"
                            Padding="0"
                            CornerRadius="10"
                            TextColor="Orange"
                            HorizontalOptions="Start"
                            BorderColor="Orange" 
                            BorderWidth="1"/>
                                </Grid>

                            </DataTemplate>
                        </BindableLayout.ItemTemplate>

