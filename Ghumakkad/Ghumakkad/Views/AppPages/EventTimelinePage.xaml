    <NavigationPage.TitleView >
        <Grid ColumnDefinitions="*,auto" ColumnSpacing="0" Margin="0" Padding="0">
            <Label Grid.Column="1" Text="Event Timeline" TextColor="White" FontSize="24" HorizontalOptions="Center" VerticalTextAlignment="Center" Margin="10"/>
            <Label Grid.Column="2" Text="&#xf0f3;" TextColor="White" FontFamily="fwFreeS"  FontSize="24" Margin="10" HorizontalOptions="End" VerticalTextAlignment="Center" />
        </Grid>
    </NavigationPage.TitleView>
